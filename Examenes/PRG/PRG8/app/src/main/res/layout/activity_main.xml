<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:layout_margin="12dp"
        android:text="TMDB Series and Movies Database"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/llButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1.5"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/rvMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMainTitle"
        >
        <Button
            android:id="@+id/btSearchMovies"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:backgroundTint="@color/verdeClaro"
            android:textColor="@color/black"
            android:text="Movies"
            android:textSize="17dp"
             />

        <Button
            android:id="@+id/btSearchSeries"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:backgroundTint="@color/amarillo"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:text="Series"
            android:textSize="17dp"
            />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llButtons"
        app:layout_constraintVertical_weight="22" />

    <LinearLayout
        android:id="@+id/botonera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:background="#CC000000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <Button
            android:id="@+id/btnPrincipio"
            android:layout_width="0dp"
            android:layout_weight="0.66"
            android:layout_marginRight="0dp"
            android:layout_height="match_parent"
            app:backgroundTint="@color/azul"
            android:textColor="@color/black"
            android:text="|-"
            android:textSize="17dp"
            />

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:backgroundTint="@color/verde"
            android:textColor="@color/black"
            android:text="Prev"
            android:textSize="17dp"
            />

        <Space
            android:id="@+id/espacio"
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="match_parent">
        </Space>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_weight="1"
            app:backgroundTint="@color/morado"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:text="Next"
            android:textSize="17dp"
            />

        <Button
            android:id="@+id/btnFinal"
            android:layout_width="0dp"
            android:layout_weight="0.66"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_height="match_parent"
            app:backgroundTint="@color/rosa"
            android:textColor="@color/black"
            android:text="-|"
            android:textSize="17dp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>